<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FriendList" >
    
    <TextView
        android:id="@+id/friendListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/friend_list_text"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/friendListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friendListText"
        android:layout_above="@+id/newPenPalButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/friend1_message"
            style="@style/ListViewButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:layout_marginBottom="20dp"
            android:text="Timmy" 
            android:onClick="goToSendMessage" 
            />
        
        <ImageButton
            android:id="@+id/friend1_profile"
            android:background="@drawable/profile_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginBottom="20dp"
            android:onClick="goToProfile"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:src="@drawable/sun" />
    
    <Button
        android:id="@id/newPenPalButton"
        style="@style/GreenButton"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/new_pen_pal_button" 
        android:onClick="goToMeetPenPal"
        />

</RelativeLayout>