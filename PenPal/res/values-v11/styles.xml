<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/PenPalActionBar</item>
        <!-- API 11 theme customizations can go here. -->
    </style>

    <!-- Action Bar Theme. -->
    <style name="PenPalActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/top_bar</item>
        <item name="android:height">73dp</item>
    </style>

</resources>